<%- if controller_name != 'sessions' %>
  <div class="mt-3">
    <%= link_to "ログイン", new_session_path(resource_name) %><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="mt-3">
    <%= link_to "新規登録", new_registration_path(resource_name) %><br />
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="mt-3">
    <%= link_to "パスワードを忘れた?", new_password_path(resource_name) %><br />
  </div>
<% end %>

<%# Deviseの設定でOmniAuthが有効かどうかをチェック %>
<%- if devise_mapping.omniauthable? %>
  <div class="flex flex-col items-center justify-center mt-3">
    <% resource_class.omniauth_providers.each do |provider| %>
      <div class="mb-4"> <!-- Optional: Add margin for spacing between buttons -->
        <%= link_to omniauth_authorize_path(resource_name, provider), data: { turbo: false } do %>
          <%= image_tag("btn_login_base.png", alt: "Sign in with #{OmniAuth::Utils.camelize(provider)}") %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
